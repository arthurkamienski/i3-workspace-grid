# Workspace grid file should be in your ~/bin directory as an executable file.

# switch to workspace
bindsym Control+Mod1+s 	   exec "workspace_grid display grid"
bindsym Mod1+Tab           exec "workspace_grid switch next"
bindsym Control+Mod1+Left  exec "workspace_grid switch left"
bindsym Control+Mod1+Right exec "workspace_grid switch right"
bindsym Control+Mod1+Up    exec "workspace_grid switch up"
bindsym Control+Mod1+Down  exec "workspace_grid switch down"
bindsym Control+Mod1+1     exec "workspace_grid switch 1"
bindsym Control+Mod1+2     exec "workspace_grid switch 2"
bindsym Control+Mod1+3     exec "workspace_grid switch 3"
bindsym Control+Mod1+4     exec "workspace_grid switch 4"
bindsym Control+Mod1+5     exec "workspace_grid switch 5"
bindsym Control+Mod1+6     exec "workspace_grid switch 6"
bindsym Control+Mod1+7     exec "workspace_grid switch 7"
bindsym Control+Mod1+8     exec "workspace_grid switch 8"
bindsym Control+Mod1+9     exec "workspace_grid switch 9"

bindsym Mod4+1 exec "workspace_grid switch 1"
bindsym Mod4+2 exec "workspace_grid switch 2"
bindsym Mod4+3 exec "workspace_grid switch 3"
bindsym Mod4+4 exec "workspace_grid switch 4"
bindsym Mod4+5 exec "workspace_grid switch 5"
bindsym Mod4+6 exec "workspace_grid switch 6"
bindsym Mod4+7 exec "workspace_grid switch 7"
bindsym Mod4+8 exec "workspace_grid switch 8"
bindsym Mod4+9 exec "workspace_grid switch 9"

# move focused container to workspace
bindsym Control+Mod1+Tab         exec "workspace_grid move next"
bindsym Control+Mod1+Shift+Left  exec "workspace_grid move left"
bindsym Control+Mod1+Shift+Right exec "workspace_grid move right"
bindsym Control+Mod1+Shift+Up    exec "workspace_grid move up"
bindsym Control+Mod1+Shift+Down  exec "workspace_grid move down"
bindsym Control+Mod1+Shift+1     exec "workspace_grid move 1"
bindsym Control+Mod1+Shift+2     exec "workspace_grid move 2"
bindsym Control+Mod1+Shift+3     exec "workspace_grid move 3"
bindsym Control+Mod1+Shift+4     exec "workspace_grid move 4"
bindsym Control+Mod1+Shift+5     exec "workspace_grid move 5"
bindsym Control+Mod1+Shift+6     exec "workspace_grid move 6"
bindsym Control+Mod1+Shift+7     exec "workspace_grid move 7"
bindsym Control+Mod1+Shift+8     exec "workspace_grid move 8"
bindsym Control+Mod1+Shift+9     exec "workspace_grid move 9"

bindsym Mod4+Shift+1 exec "workspace_grid move 1"
bindsym Mod4+Shift+2 exec "workspace_grid move 2"
bindsym Mod4+Shift+3 exec "workspace_grid move 3"
bindsym Mod4+Shift+4 exec "workspace_grid move 4"
bindsym Mod4+Shift+5 exec "workspace_grid move 5"
bindsym Mod4+Shift+6 exec "workspace_grid move 6"
bindsym Mod4+Shift+7 exec "workspace_grid move 7"
bindsym Mod4+Shift+8 exec "workspace_grid move 8"
bindsym Mod4+Shift+9 exec "workspace_grid move 9"